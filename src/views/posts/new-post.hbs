<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h1>Nueva nota</h1>
        </div>
        <div class="card-body">
            <form action="/post/new-post" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Desciptcion"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="image" class="form-control" placeholder="image"></textarea>
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control" placeholder="contenido"></textarea>
                </div>
                
                <div class="form-group">
                    <button type="submit" class=" btn btn-primary form-control">Actualizar</button>
                </div>
            </form>
        </div>
    </div>
</div>