<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4"> {{post.title}} </h1>

            <!-- Author -->
            <p class="lead">
                by
                <a href="/about">Michael Adolfo Huerta Ramirez</a>
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on  {{post.date}} </p>

            <hr>

            <!-- Preview Image -->
